{
    "name": "masoud4/graphql",
    "description": "A foundational PHP library for building GraphQL APIs from scratch.",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "php",
        "graphql",
        "api",
        "schema",
        "query",
        "mutation",
        "type-system"
    ],
    "homepage": "https://github.com/Masoud4/classic-graphql",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "masoud4\\GraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Masoud4",
            "email": "ashrafianpur.masoud@gmail.com",
            "homepage": "https://your-personal-website.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    }
}
